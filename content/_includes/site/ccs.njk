{% import 'embed.macros.njk' as embed %}
{% import 'forms.macros.njk' as forms %}

<form data-ccs="menu">
  {{ forms.field(
    label='Theme',
    type=ccs.themes,
    field_attrs={'data-ccs-field': 'theme'},
    input_attrs={'data-ccs-input': 'theme'}
  ) }}

  {{ forms.field(
    label='Hue',
    type='range',
    field_attrs={'data-ccs-field': 'hue'},
    input_attrs={
      'data-ccs-input': 'hue',
      'min': 0,
      'max': 360,
      'value': ccs.hue
    }
  ) }}

  {{ forms.field(
    label='Saturation',
    type='range',
    field_attrs={'data-ccs-field': 'saturation'},
    input_attrs={
      'data-ccs-input': 'saturation',
      'min': 0,
      'max': 100,
      'value': ccs.saturation
    }
  ) }}

  {{ forms.field(
    label='Lightness',
    type='range',
    field_attrs={'data-ccs-field': 'lightness'},
    input_attrs={
      'data-ccs-input': 'lightness',
      'min': 30,
      'max': 70,
      'value': ccs.lightness
    }
  ) }}

  {{ forms.field(
    label='Contrast',
    type='range',
    field_attrs={'data-ccs-field': 'contrast'},
    input_attrs={
      'data-ccs-input': 'contrast',
      'min': 25,
      'max': 100,
      'value': ccs.contrast
    }
  ) }}

  <div data-ccs="buttons">
    <button
      data-ccs-input="mode"
      data-btn="small"
      type="button">
      invert
    </button>
    <button
      data-ccs-input="unset"
      data-btn="small"
      type="button"
      hidden>
      reset
    </button>
  </div>
</form>
