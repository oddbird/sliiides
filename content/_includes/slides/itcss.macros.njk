{% import "slides/embed.macros.njk" as embed %}

{% macro main(slide, page) %}
{% set slideBase %}
img: patterns/itcss-metrics.png
alt: |
  inverted triange, with
  range accross the top,
  and specificity/explicitness
  down the sides
fit: contain
background: white;
qr: http://technotif.com/manage-large-css-projects-with-itcss/
caption: |
  [**Inverted Triangle** CSS](http://technotif.com/manage-large-css-projects-with-itcss/)
  by [**Harry Roberts**](https://twitter.com/csswizardry)
{% endset %}
{% set slide_yaml = slideBase | yaml | merge(slide) %}
  {{ embed.img(
    slide=slide_yaml,
    page=page
  ) }}
{% endmacro %}

